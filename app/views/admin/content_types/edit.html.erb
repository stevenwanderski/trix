<h1>Edit Content Type</h1>

<%= nested_form_for(@content_type, url: admin_content_type_path(@content_type)) do |f| %>
  <div class="form-item">
    <%= f.label :name, class: 'label' %>
    <%= f.text_field :name, class: 'input--text' %>
  </div>

  <h3>Fields</h3>
  <%= f.fields_for :fields do |field_form| %>
    <div class="form-item">
      <div class="form-item">
        <%= field_form.label :name, class: 'label' %>
        <%= field_form.text_field :name, class: 'input--text' %>
      </div>

      <div class="form-item">
        <%= field_form.label :field_type, class: 'label' %>
        <%= field_form.select :field_type, [['Text', 'text'], ['Radios', 'radios'], ['Checkboxes', 'checkboxes']], {}, class: 'input--select' %>
      </div>

      <%= field_form.link_to_remove "Remove this field" %>
    </div>
  <% end %>

  <p><%= f.link_to_add "Add a field", :fields %></p>

  <%= f.button 'Save', class: 'button' %>
<% end %>
