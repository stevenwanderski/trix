<div class="auth">
  <h1>Change your password</h1>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="form-item">
      <%= f.label :password, "New password", class: 'label' %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'input--text' %>
    </div>

    <div class="form-item">
      <%= f.label :password_confirmation, "Confirm new password", class: 'label' %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'input--text' %>
    </div>

    <div class="actions">
      <%= f.submit "Change my password", class: 'button' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
