<div class="auth">
  <h1>Log in</h1>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-item">
      <%= f.label :email, class: 'label' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input--text' %>
    </div>

    <div class="form-item">
      <%= f.label :password, class: 'label' %>
      <%= f.password_field :password, autocomplete: "current-password", class: 'input--text' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-item">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: 'button' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
