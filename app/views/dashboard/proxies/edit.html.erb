<h1>Edit Proxy</h1>

<div class="form-section">
  <strong><%= @proxy.proxy_request_type.try(:upcase) %></strong> /proxies/<%= current_user.slug %>/<%= @proxy.slug %>
</div>

<% if @proxy.errors.any? %>
<ul class="errors">
  <% @proxy.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>
<% end %>

<%= nested_form_for(@proxy, url: dashboard_proxy_path(@proxy), html: { class: 'model-form' }) do |f| %>
  <div class="form-section">
    <div class="form-item">
      <%= f.label :name, class: 'label' %>
      <%= f.text_field :name, class: 'input--text' %>
    </div>

    <div class="form-item">
      <%= f.label :slug, 'Proxy URL path', class: 'label' %>
      <%= f.text_field :slug, class: 'input--text' %>
    </div>

    <div class="form-item">
      <%= f.label :proxy_request_type, class: 'label' %>
      <%= f.select :proxy_request_type,
          [
            ['POST', 'post'],
            ['GET', 'get'],
            ['PUT', 'put'],
            ['PATCH', 'patch'],
            ['DELETE', 'delete']
          ],
          {},
          class: 'input--select'
      %>
    </div>
  </div>

  <div class="form-section">
    <div class="form-item">
      <%= f.label :target_url, 'Target URL', class: 'label' %>
      <%= f.text_field :target_url, class: 'input--text' %>
    </div>

    <div class="form-item">
      <%= f.label :target_request_type, class: 'label' %>
      <%= f.select :target_request_type,
          [
            ['POST', 'post'],
            ['GET', 'get'],
            ['PUT', 'put'],
            ['PATCH', 'patch'],
            ['DELETE', 'delete']
          ],
          {},
          class: 'input--select'
      %>
    </div>

    <div class="form-item">
      <%= f.label :body_format, 'Target body format', class: 'label' %>
      <%= f.select :body_format,
          [
            ['JSON', 'json']
          ],
          { include_blank: '- None -' },
          class: 'input--select'
      %>
    </div>
  </div>

  <div class="form-section">
    <h3>Query Params</h3>
    <%= f.fields_for :proxy_params do |ff| %>
      <div class="form-item content-type-field">
        <div class="field-item">
          <%= ff.text_field :param_from, class: 'input--text', placeholder: 'From' %>
        </div>

        <div class="field-item">
          <%= ff.text_field :param_to, class: 'input--text', placeholder: 'To' %>
        </div>

        <%= ff.link_to_remove "Remove" %>
      </div>
    <% end %>

    <p><%= f.link_to_add "Add a query param", :proxy_params %></p>
  </div>

  <div class="form-section">
    <h3>Headers</h3>
    <%= f.fields_for :proxy_headers do |ff| %>
      <div class="form-item content-type-field">
        <div class="field-item">
          <%= ff.text_field :name, class: 'input--text', placeholder: 'Name' %>
        </div>

        <div class="field-item">
          <%= ff.text_field :value, class: 'input--text', placeholder: 'Value' %>
        </div>

        <%= ff.link_to_remove "Remove" %>
      </div>
    <% end %>

    <p><%= f.link_to_add "Add a header", :proxy_headers %></p>
  </div>

  <div class="form-item form-actions">
    <%= f.submit 'Save Proxy', class: 'button' %>
    <%= link_to 'Delete', dashboard_proxy_path(@proxy), method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
<% end %>
