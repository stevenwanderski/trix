<h1>Hi Proxies.</h1>

<%= link_to 'New Proxy', new_dashboard_proxy_path, class: 'button' %>

<br><br>

<% if @proxies.any? %>
  <% @proxies.each do |proxy| %>
    <div>
      <p><%= link_to proxy.name, edit_dashboard_proxy_path(proxy) %></p>
      <p>
        <strong><%= proxy.target_request_type.upcase %></strong> <%= proxy.target_url %>
      </p>
    </div>

    <hr>
  <% end %>
<% end %>
