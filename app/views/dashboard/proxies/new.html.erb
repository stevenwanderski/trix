<h1>New Proxy</h1>

<% if @proxy.errors.any? %>
<ul class="errors">
  <% @proxy.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>
<% end %>

<%= nested_form_for(@proxy, url: dashboard_proxies_path, html: { class: 'model-form' }) do |f| %>
  <%= render 'form', f: f %>

  <div class="form-item form-actions">
    <%= f.submit 'Save Proxy', class: 'button' %>
  </div>
<% end %>
