<h1>Choose a URL</h1>

<div class="info">
  Please choose the URL that will be used to access your proxies.
</div>

<hr>

<%= form_for current_user,
    url: dashboard_slug_path,
    method: :put,
    html: { class: 'model-form' } do |f| %>

  <div class="form-section">
    <div class="form-item form-item--inline">
      <span class="field-prefix">
        <%= @host %>/
      </span>

      <div class="form-field">
        <%= f.text_field :slug, class: 'input--text input--inline' %>
      </div>
    </div>

    <% if current_user.errors[:slug].any? %>
      <div class="error">
        That URL has already been taken.
      </div>
    <% end %>
  </div>

  <div class="form-item form-actions">
    <%= f.submit 'Save', class: 'button' %>
  </div>
<% end %>
