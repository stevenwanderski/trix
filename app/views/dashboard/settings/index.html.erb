<h1>Settings</h1>

<div class="form-item">
  <strong>Token:</strong> <%= @token %>
</div>

<%= form_for(@user, url: dashboard_settings_path, method: :put, html: { class: 'model-form' }) do |f| %>
  <div class="form-item">
    <%= f.label :slug, class: 'label' %>
    <%= f.text_field :slug, class: 'input--text' %>
  </div>

  <div class="form-item form-actions">
    <%= f.submit 'Save', class: 'button' %>
  </div>
<% end %>
